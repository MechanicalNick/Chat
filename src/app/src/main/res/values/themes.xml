<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1E1E1E</item>
        <item name="colorPrimaryVariant">#2A9D8F</item>
        <item name="colorOnPrimary">@color/secondary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="reactionViewStyle">@style/Theme.Homework.ReactionView</item>
        <item name="plusViewStyle">@style/Theme.Homework.PlusView</item>
        <item name="contentEditorStyle">@style/Theme.Homework.ContentEditor</item>
        <item name="searchViewGroupStyle">@style/Theme.Homework.SearchViewGroup</item>
        <item name="android:windowBackground">@color/default_background</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Theme.Homework.NoTitle" parent="Theme.Homework">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Homework.ReactionView">
        <item name="android:background">@drawable/bg_reaction_view</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:paddingHorizontal">9dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="Theme.Homework.PlusView">
        <item name="android:background">@drawable/bg_reaction_view</item>
        <item name="android:paddingHorizontal">9dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:src">@drawable/ic_plus</item>
    </style>

     <style name="Theme.Homework.CardView" parent="CardView">
         <item name="cardBackgroundColor">@color/custom_background_secondary</item>
         <item name="cardCornerRadius">15dp</item>
     </style>

    <style name="Theme.Homework.Text">
        <item name="android:textColor">@color/message_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Inter</item>
    </style>

    <style name="Theme.Homework.EditText" parent="Theme.Homework.Text">
        <item name="android:textColor">@color/message_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Inter</item>
        <item name="android:padding">5dip</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:hint">@string/edit_text_hint</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <style name="Theme.Homework.TextHeader" parent="Theme.Homework.Text">
        <item name="android:textColor">@color/default_text_header</item>
    </style>

    <style name="Theme.Homework.ContentEditor">
        <item name="android:background">@color/content_editor_background</item>
    </style>

    <style name="Theme.Homework.SearchViewGroup">
        <item name="android:background">@color/content_editor_background</item>
    </style>

    <style name="Theme.Homework.ImageButton">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Theme.Homework.CardView.Message" parent="Theme.Homework.CardView">
        <item name="cardBackgroundColor">@color/default_text_header</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/custom_background_secondary</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/custom_background_secondary</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabTextColor">@color/secondary_text</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorGravity">bottom</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>