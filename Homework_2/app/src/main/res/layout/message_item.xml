<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="@style/Theme.Homework.CardView.Message"
        android:id="@+id/cardView">

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/Theme.Homework.Text"
            android:text="Привет! lorem ipsum test message dalshe zabil" />
    </androidx.cardview.widget.CardView>

    <com.tinkoff.homework.view.FlexboxLayout
        android:layout_alignBottom="@id/cardView"
        app:maxCountInRow="@integer/flexbox_maxCountInRow"
        app:flexboxMargin="@integer/flexbox_flexboxMargin"
        android:id="@+id/flexbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>