<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="reactionViewStyle">@style/Theme.Homework.ReactionView</item>
        <item name="plusViewStyle">@style/Theme.Homework.PlusView</item>
        <item name="contentEditorStyle">@style/Theme.Homework.ContentEditor</item>
        <item name="android:windowBackground">@color/default_color_background</item>
    </style>

    <style name="Theme.Homework.ReactionView">
        <item name="android:background">@drawable/bg_reaction_view</item>
        <item name="android:textColor">@color/chips_text_color</item>
        <item name="android:paddingHorizontal">9dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="Theme.Homework.PlusView">
        <item name="android:background">@drawable/bg_reaction_view</item>
        <item name="android:paddingHorizontal">9dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:src">@drawable/plus</item>
    </style>

     <style name="Theme.Homework.CardView" parent="CardView">
         <item name="cardBackgroundColor">@color/chips_background</item>
         <item name="cardCornerRadius">20dp</item>
     </style>

    <style name="Theme.Homework.Text">
        <item name="android:textColor">@color/default_color_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Inter</item>
    </style>

    <style name="Theme.Homework.EditText" parent="Theme.Homework.Text">
        <item name="android:textColor">@color/default_color_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Inter</item>
        <item name="android:padding">5dip</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:hint">@string/edit_text_hint</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
    </style>

    <style name="Theme.Homework.TextHeader" parent="Theme.Homework.Text">
        <item name="android:textColor">@color/default_color_text_header</item>
    </style>

    <style name="Theme.Homework.ContentEditor">
        <item name="android:background">@color/content_editor_background_color</item>
    </style>

    <style name="Theme.Homework.ImageButton">
        <item name="android:background">@color/transparent</item>
    </style>
</resources>