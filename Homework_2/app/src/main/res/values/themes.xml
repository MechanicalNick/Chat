<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="reactionViewStyle">@style/Theme.Homework.ReactionView</item>

    <style name="Theme.Homework.ReactionView">
        <item name="android:background">@drawable/bg_reaction_view</item>
        <item name="android:textColor">@color/chips_text_color</item>
        <item name="android:paddingHorizontal">9dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>
    </style>
</resources>